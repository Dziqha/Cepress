
---
// FeatureCard.astro - Fully responsive feature card
export interface Props {
  title: string;
  description: string;
  icon: string;
}

const { title, description, icon } = Astro.props;
---

<div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-4 sm:p-6 hover:shadow-lg hover:shadow-gray-200/50 dark:hover:shadow-gray-900/50 transition-all duration-200 hover:-translate-y-1">
  <div class="flex items-start space-x-3 sm:space-x-4">
    <div class="flex-shrink-0">
      <div class="w-10 h-10 sm:w-12 sm:h-12 bg-primary-500 rounded-lg flex items-center justify-center shadow-lg">
        <span class="text-lg sm:text-xl" role="img" aria-hidden="true">{icon}</span>
      </div>
    </div>
    <div class="flex-1 min-w-0">
      <h3 class="text-base sm:text-lg font-semibold text-gray-900 dark:text-white mb-2 leading-tight">
        {title}
      </h3>
      <p class="text-gray-600 dark:text-gray-300 text-sm sm:text-base leading-relaxed">
        {description}
      </p>
    </div>
  </div>
</div>